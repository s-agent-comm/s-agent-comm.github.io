{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://slashlife.ai/schema/agent.schema.jsonld",
  "title": "Agent Model Schema",
  "description": "Semantic schema defining declarative AI agents, identity, capabilities, intents, execution contexts, and runtime bindings.",
  "type": "object",
  "@context": "https://slashlife.ai/contexts/agent.context.jsonld",

  "properties": {
    "id": {
      "type": "string",
      "description": "The globally unique agent identifier, typically a DID (did:key)."
    },
    "type": {
      "type": "string",
      "const": "core:Agent"
    },

    "coreIdentity": {
      "type": "object",
      "properties": {
        "did": { "type": "string" },
        "version": { "type": "string" },
        "title": { "type": "string" }
      },
      "required": ["did"]
    },

    "purposeAndRole": {
      "type": "object",
      "properties": {
        "objective": { "type": "string" },
        "owner": { "type": "string" }
      }
    },


    "operationalProfile": {
      "type": "object",
      "properties": {
        "triggers": { "type": "array", "items": { "type": "object" } },
        "inputSchema": { "type": "object" },
        "outputSchema": { "type": "object" }
      }
    },

    "systemIntegration": {
      "type": "object",
      "properties": {
        "dependsOn": {
          "type": "array",
          "items": { "type": "string" }
        },
        "interfaces": {
          "type": "array",
          "items": { "type": "object" }
        }
      }
    },

    "economicInterfaces": {
      "type": "object",
      "properties": {
        "wallets": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "address": { "type": "string" }
            }
          }
        }
      }
    },

    "identityInterfaces": {
      "type": "object",
      "properties": {
        "identities": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "did": { "type": "string" },
              "keyManagementSystem": { "type": "string" }
            }
          }
        }
      }
    },

    "lifecycleManagement": {
      "type": "object",
      "properties": {
        "state": { "type": "string" },
        "genesisRecord": { "type": "object" },
        "healthCheck": { "type": "object" },
        "decommissionRecord": { "type": "object" }
      }
    },

    "contractualInterfaces": {
      "type": "object",
      "properties": {
        "contracts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "termsUri": { "type": "string", "format": "uri" }
            }
          }
        }
      }
    }
  },

  "required": ["id", "type", "coreIdentity"]
}
