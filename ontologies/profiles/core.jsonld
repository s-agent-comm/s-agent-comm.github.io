{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://slashlife.ai/schema/core.schema.jsonld",
  "title": "Semantic Core Model",
  "description": "Foundation schema for semantic entities, agents, actions, contexts, and trace events.",
  "type": "object",
  "@context": "https://slashlife.ai/contexts/agent.context.jsonld",

  "definitions": {
    "AgentEntity": {
      "type": "object",
      "properties": {
        "id":   { "type": "string" },
        "type": { "type": "string", "const": "core:AgentEntity" }
      },
      "required": ["id", "type"]
    },

    "Agent": {
      "type": "object",
      "properties": {
        "id":     { "type": "string" },
        "type":   { "type": "string", "const": "core:Agent" },
        "label":  { "type": "string" }
      },
      "required": ["id", "type"]
    },

    "Intent": {
      "type": "object",
      "properties": {
        "type": { "type": "string", "const": "core:Intent" },
        "description": { "type": "string" }
      },
      "required": ["type"]
    },

    "Capability": {
      "type": "object",
      "properties": {
        "type": { "type": "string", "const": "core:Capability" },
        "id": { "type": "string" },
        "description": { "type": "string" }
      },
      "required": ["type"]
    },

    "Action": {
      "type": "object",
      "properties": {
        "type":   { "type": "string", "const": "core:Action" },
        "id":     { "type": "string" },
        "timestamp": { "type": "string", "format": "date-time" }
      },
      "required": ["type"]
    },

    "ExecutionContext": {
      "type": "object",
      "properties": {
        "type":  { "type": "string", "const": "core:ExecutionContext" },
        "id":    { "type": "string" },
        "scope": { "type": "string" }
      },
      "required": ["type"]
    },

    "TraceEvent": {
      "type": "object",
      "properties": {
        "type": { "type": "string", "const": "core:TraceEvent" },
        "agent": { "$ref": "#/definitions/Agent" },
        "action": { "$ref": "#/definitions/Action" },
        "context": { "$ref": "#/definitions/ExecutionContext" },
        "timestamp": { "type": "string", "format": "date-time" }
      },
      "required": ["type", "agent", "action", "context"]
    },

    "Artifact": {
      "type": "object",
      "properties": {
        "type": { "type": "string", "const": "core:Artifact" },
        "id": { "type": "string" },
        "description": { "type": "string" },
        "hash": { "type": "string" }
      },
      "required": ["type"]
    }
  },

  "properties": {
    "entity": { "$ref": "#/definitions/AgentEntity" }
  }
}
