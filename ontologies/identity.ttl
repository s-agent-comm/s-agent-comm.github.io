@prefix id: <https://ns.slashlife.ai/agent/identity#> .
@prefix core: <https://ns.slashlife.ai/agent/core#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix dct: <http://purl.org/dc/terms/> .

#################################################################
# Ontology Header
#################################################################

<https://ns.slashlife.ai/agent/identity>
    a owl:Ontology ;
    dct:title "Identity Ontology" ;
    dct:description "Defines concepts related to the identity of AI Agents, including DIDs and key management." ;
    dct:modified "2025-11-10"^^xsd:date ;
    owl:versionInfo "0.1.0" ;
    owl:imports <https://ns.slashlife.ai/agent/core> .

#################################################################
# Identity Classes
#################################################################

id:AgentIdentity a owl:Class ;
    rdfs:subClassOf core:AgentEntity ;
    rdfs:label "AgentIdentity" ;
    rdfs:comment "Represents the verifiable identity of an AI Agent." .

id:DecentralizedIdentifier a owl:Class ;
    rdfs:subClassOf id:AgentIdentity ;
    rdfs:label "DecentralizedIdentifier" ;
    rdfs:comment "A Decentralized Identifier (DID) associated with an Agent." .

id:KeyManagementSystem a owl:Class ;
    rdfs:label "KeyManagementSystem" ;
    rdfs:comment "A system responsible for managing cryptographic keys for an Agent." .

#################################################################
# Identity Properties
#################################################################

id:hasDID a owl:ObjectProperty ;
    rdfs:domain id:AgentIdentity ;
    rdfs:range id:DecentralizedIdentifier ;
    rdfs:label "hasDID" ;
    rdfs:comment "Links an AgentIdentity to its Decentralized Identifier." .

id:managedByKMS a owl:ObjectProperty ;
    rdfs:domain id:AgentIdentity ;
    rdfs:range id:KeyManagementSystem ;
    rdfs:label "managedByKMS" ;
    rdfs:comment "Indicates the Key Management System responsible for an Agent's keys." .

id:did a owl:DatatypeProperty ;
    rdfs:domain id:AgentIdentity ;
    rdfs:range xsd:string ;
    rdfs:label "did" ;
    rdfs:comment "The string value of the Decentralized Identifier." .

id:version a owl:DatatypeProperty ;
    rdfs:domain id:AgentIdentity ;
    rdfs:range xsd:string ;
    rdfs:label "version" .

id:title a owl:DatatypeProperty ;
    rdfs:domain id:AgentIdentity ;
    rdfs:range xsd:string ;
    rdfs:label "title" .

id:kmsEndpoint a owl:DatatypeProperty ;
    rdfs:domain id:KeyManagementSystem ;
    rdfs:range xsd:anyURI ;
    rdfs:label "kmsEndpoint" ;
    rdfs:comment "The endpoint URI for the Key Management System." .
